       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter text 1"
       android:id="@+id/e3"/>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter text 2"
       android:id="@+id/e31"/>
